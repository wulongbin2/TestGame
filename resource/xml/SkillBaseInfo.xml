<skillBaseInfo>
    <!--
     技能基础配置
     @id ：唯一id
     @name:名称
     @skillAnima:技能动画
     @isGroupSkill:是否是合体技能
     @groupRoles:合体技能需要的角色
     @rate 触发几率
     @timeLimit:触发次数[-1：无限次]
     @canAvoid:true [是否可回避]
     @tag:技能标签，用于分组派系[]
     @des:技能描述

     @trigger触发条件
     @trigger.item.compareValue1 比较值1 值可以是数值，也可以是简单的表达式[+-x/]，属性对象[self表示己方对象，enemy表示敌方对象][对象支持属性:curZDL,totalZDL]
     @trigger.item.compareValue2 比较值2
     @trigger.item.compareType 比较方式[less,greater]

     @effect效果  targetPro=targetPro (+|-|*|/) operatorValue;
     @effectType [attack,passive,other];
     @effect.item.targetPro 属性对象
     @effect.item.operatorType 运算数值方式[add,sub]
     @effect.item.operatorValue 运算数值 [值可以是数值，也可以是简单的表达式]
     
     -->
     <item id='auto' skillAnima='' isGroupSkill='false' groupRoles='' rate='30' canAvoid='true' timeLimit='-1' tag=''>
        <effect>
            <item effectType='attack' targetPro='enemy.curZDL'  operatorType='sub' operatorValue='self.fightZDL'>
        <effect/>
    </item>

    <item id='lvfengxian' skillAnima='' isGroupSkill='false' groupRoles='' rate='30' canAvoid='true' timeLimit='-1' tag=''>
        <trigger>
            <item compareValue1='self.curZDL/self.totalZDL' compareType='less' compareValue2='200'>
        </trigger>
        <effect>
            <item effectType='' targetPro='enemy.totalZDL'  operatorType='add' operatorValue='self.fightZDL*1.3'>
        <effect/>
    </item>
</skillBaseInfo>